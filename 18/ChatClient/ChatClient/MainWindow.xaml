<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Window" Height="350" Width="525">
    <Grid>
        <TextBox Name="chatTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="419" Height="177"/>
        <TextBox Name="messageTextBox" HorizontalAlignment="Left" Width="302" Margin="2,284,0,0" Height="48" VerticalAlignment="Top"/>
        <Button Content="Send" Name="sendButton" VerticalAlignment="Bottom" Height="56" Click="sendButton_Click" Margin="324,0,106,0"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" RenderTransformOrigin="0.64,-2.199" Margin="2,0,0,78"/>
        <Label Content="Имя" HorizontalAlignment="Left" Height="23" Margin="2,182,0,0" VerticalAlignment="Top" Width="64"/>
        <Label Content="Сообщение" HorizontalAlignment="Left" Height="23" Margin="0,256,0,0" VerticalAlignment="Top" Width="96"/>
    </Grid>
</Window>
